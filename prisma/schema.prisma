generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model TutorProfile {
  id String @id @default(uuid())
  userId String @unique
  bio String @db.Text
  subjects TutorSubjects[]
  isVerified Boolean @default(false)
  hourlyRate Int
  availability AvailableDay[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id String @id @default(uuid())
  studentId String
  tutorId String
  status BookingStatus @default(PENDING)
  date DateTime
  createdAt DateTime @default(now())
}

model Review {
  id String @id @default(uuid())
  studentId String
  tutorId String
  rating Int
  comment String @db.Text
  createdAt DateTime @default(now())
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum TutorSubjects {
  MATH
  PHYSICS
  BIOLOGY
  CHEMISTRY
}

enum AvailableDay {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
